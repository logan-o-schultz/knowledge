" Set line numbers
" set relativenumber
set number

" Set text wrapping to false
set nowrap

" Set linebreak in case I decide to use wrap
set linebreak

" Set statusline config
" set statusline=2
" set statusline=%F
" set statusline+=%T
" set statusline+=%l

" Enable syntax highlighting
syntax on

" Set highlighting rules
" highlight Normal guibg=none
" highlight NonText guibg=none
" highlight Normal ctermbg=none
" highlight NonText ctermbg=none
